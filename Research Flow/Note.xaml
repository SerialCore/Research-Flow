<Page
    x:Class="Research_Flow.Note"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Research_Flow"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="notefilename" PlaceholderText="Note Name" IsSpellCheckEnabled="False" VerticalAlignment="Center" Margin="5,0"/>
                <AppBarButton Grid.Column="1" Icon="Save" Click="Save_Note" Height="40" Width="38" LabelPosition="Collapsed"/>
            </Grid>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <AppBarButton Icon="FullScreen" Click="FullScreen_Click" Height="40" Width="38"/>
                <AppBarButton Click="ChooseInputDevice" Tag="pen" Height="40" Width="38">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xED5F;" />
                </AppBarButton>
                <InkToolbar TargetInkCanvas="{x:Bind inkCanvas}"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <AppBarButton Icon="Undo" Click="UndoInk" Height="40" Width="38"/>
                <AppBarButton Icon="Redo" Click="RedoInk" Height="40" Width="38"/>
                <AppBarButton Icon="Share" Tapped="Flyout_Tapped" Height="40" Width="38">
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Share" Click="Share_Note"/>
                            <MenuFlyoutItem Text="SaveAs" Click="Export_Note"/>
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
                </AppBarButton>
                <AppBarButton Icon="OpenFile" Click="Import_Note" Height="40" Width="38"/>
                <AppBarButton Icon="Document" Click="Open_Document" Height="40" Width="38"/>
            </StackPanel>

            <SplitView Grid.Row="1" Grid.ColumnSpan="3" x:Name="notepanel" OpenPaneLength="400" PanePlacement="Right" DisplayMode="Overlay">
                <SplitView.Pane>
                    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                        <ListView x:Name="notelist" IsItemClickEnabled="True" ItemClick="Notelist_ItemClick" Margin="0,0,0,40">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <CommandBar VerticalAlignment="Bottom" Background="Transparent" DefaultLabelPosition="Right" OverflowButtonVisibility="Collapsed">
                            <CommandBar.Content>
                                <TextBlock Text="Notes" Style="{ThemeResource BodyTextBlockStyle}" Margin="12,10,0,0"/>
                            </CommandBar.Content>
                            <AppBarButton Icon="Delete" Label="Delete" Click="Delete_Note"/>
                        </CommandBar>
                    </Grid>
                </SplitView.Pane>
                <SplitView.Content>
                    <ScrollViewer x:Name="paintpanel" ZoomMode="Enabled" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                        <Viewbox Stretch="Uniform" StretchDirection="Both" Margin="20">
                            <toolkit:DropShadowPanel BlurRadius="8" ShadowOpacity="0.5" Color="Black"
                                  OffsetX="2" OffsetY="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Grid>
                                    <Rectangle Fill="White" Height="4096" Width="2048"/>
                                    <InkCanvas x:Name="inkCanvas"/>
                                </Grid>
                            </toolkit:DropShadowPanel>
                        </Viewbox>
                    </ScrollViewer>
                </SplitView.Content>
            </SplitView>
            
        </Grid>

    </Grid>

</Page>
