<Page
    x:Class="Research_Flow.Topic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Research_Flow"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Pivot Margin="20,0,20,10">
            <PivotItem Header="Flow">

            </PivotItem>
            <PivotItem Header="Project">
                <toolkit:OrbitView x:Name="orbitView"
                                   AnchorColor="LightSkyBlue"
                                   AnchorsEnabled="True"
                                   IsItemClickEnabled="True"
                                   MinItemSize="30"
                                   MaxItemSize="40"
                                   OrbitColor="Black"
                                   OrbitsEnabled="false">
                    <toolkit:OrbitView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Label}"/>
                        </DataTemplate>
                    </toolkit:OrbitView.ItemTemplate>
                    <toolkit:OrbitView.ItemsSource>
                        <toolkit:OrbitViewDataItemCollection>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                            <toolkit:OrbitViewDataItem Diameter="2" Distance="1" Label="Pedal Motion"/>
                        </toolkit:OrbitViewDataItemCollection>
                    </toolkit:OrbitView.ItemsSource>
                    <toolkit:OrbitView.CenterContent>
                        <TextBlock Text="Center"/>
                    </toolkit:OrbitView.CenterContent>
                </toolkit:OrbitView>
            </PivotItem>
        </Pivot>

        <toolkit:InAppNotification x:Name="InAppNotification" 
                                    ShowDismissButton="True"
                                    AnimationDuration="00:00:00.1000000"
                                    VerticalOffset="100"
                                    HorizontalOffset="0"/>

    </Grid>

</Page>
