<Page
    x:Class="Research_Flow.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Research_Flow"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="FullPage" Background="LightSkyBlue">
        
        <NavigationView x:Name="NavView"
                        ItemInvoked="NavView_ItemInvoked"
                        SelectionChanged="NavView_SelectionChanged"
                        Loaded="NavView_Loaded"
                        Canvas.ZIndex="0">

            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Knowledge"/>
                <NavigationViewItem Content="Overview" Tag="Overview">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB68;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Contact" Tag="Contact">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA8F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader Content="Skills Training"/>
                <NavigationViewItem Content="Topic" Tag="Topic">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB50;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Search" Tag="Search">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEDE4;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Learn" Tag="Learn">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7BE;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader Content="Accessary"/>
                <NavigationViewItem Content="Compose" Tag="Compose">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA86;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Tool" Tag="Tool">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEC26;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox x:Name="ASB" QueryIcon="Find"/>
            </NavigationView.AutoSuggestBox>

            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid Margin="20,32,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Style="{StaticResource TitleTextBlockStyle}" 
                                   FontSize="28"
                                   VerticalAlignment="Top"
                                   Text="Research Flow"/>
                        <CommandBar Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    DefaultLabelPosition="Right"
                                    Background="Transparent">
                            <AppBarButton Label="ScreenShot" Icon="AttachCamera" Tapped="Flyout_Tapped" Background="Transparent">
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Share your idea" Click="ScreenShot_Share"/>
                                        <MenuFlyoutItem Text="Upload to OneDrive" Click="ScreenShot_Save"/>
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>
                            </AppBarButton>
                            <AppBarButton Label="WebPage" Icon="Link" Click="WebPage_Click" Background="Transparent"/>
                            <AppBarButton Label="Application" Icon="Shop" Tapped="Flyout_Tapped" Background="Transparent">
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Review" Click="Give_Rate"/>
                                        <MenuFlyoutItem Text="FeedBack" Click="Give_Feedback"/>
                                        <MenuFlyoutItem Text="How-Tos" Click="Open_Tutorials"/>
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>
                            </AppBarButton>
                        </CommandBar>
                        </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>

            <NavigationView.PaneFooter>
                <ListViewItem Tapped="Service_Tapped">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <PersonPicture Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" x:Name="accountPhoto" Height="24" Width="24"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="accountName" FontSize="16" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="accountEmail" FontSize="16" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </Grid>
                </ListViewItem>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" >
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition/>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>

        </NavigationView>

        <Grid x:Name="account_panel_background" Background="Black" Opacity="0.5" Visibility="Collapsed"/>
        <Grid x:Name="account_panel" Height="580" Width="560" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderThickness="1" BorderBrush="Blue" Visibility="Collapsed">
            <Image Source="/Assets/Logos/OneDrive_logo.png" Margin="40" VerticalAlignment="Top"/>
            <Grid Margin="0,150,0,70">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" x:Name="accountLogout" Content="Log out" Click="AccountLogout_Click"
                        Height="32" Width="250" Margin="10" HorizontalAlignment="Right" Background="Red"/>
                <Button Grid.Row="0" Grid.Column="1" x:Name="accountSync" Content="Synchronize" Click="AccountSync_Click"
                        Height="32" Width="250" Margin="10" HorizontalAlignment="Right" Background="LightBlue"/>
            </Grid>
            <Button x:Name="account_exit" Click="Account_exit_Click" Content="OK" 
                    Height="32" Width="250" Margin="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="LightSkyBlue"/>
        </Grid>

        <toolkit:InAppNotification x:Name="InAppNotification" 
                                    ShowDismissButton="True"
                                    AnimationDuration="00:00:00.1000000"
                                    VerticalOffset="100"
                                    HorizontalOffset="0"/>

    </Grid>

</Page>
