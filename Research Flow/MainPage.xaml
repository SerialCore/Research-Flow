<Page
    x:Class="Research_Flow.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Research_Flow"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="FullPage" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <NavigationView x:Name="NavView"
                        PaneDisplayMode="Top"
                        IsBackEnabled="{x:Bind ContentFrame.CanGoBack,Mode=OneWay}"
                        ItemInvoked="NavView_ItemInvoked"
                        SelectionChanged="NavView_SelectionChanged"
                        Loaded="NavView_Loaded"
                        BackRequested="NavView_BackRequested">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Overview" Tag="Overview">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB68;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Contact" Tag="Contact">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA8F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator/>
                <NavigationViewItem Content="Topic" Tag="Topic">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB50;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Search" Tag="Search">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEDE4;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Learn" Tag="Learn">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7BE;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator/>
                <NavigationViewItem Content="Compose" Tag="Compose">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEA86;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Tool" Tag="Tool">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEC26;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox x:Name="ASB" QueryIcon="Find" Width="200"/>
            </NavigationView.AutoSuggestBox>

            <NavigationView.Header>
                <Frame x:Name="ContentHeader">
                    <CommandBar HorizontalAlignment="Right" VerticalAlignment="Top" DefaultLabelPosition="Right" 
                                Background="Transparent" OverflowButtonVisibility="Collapsed">
                        <AppBarButton Label="WebPage" Icon="Link" Click="WebPage_Click" Background="Transparent"/>
                        <AppBarSeparator/>
                        <AppBarButton Label="Synchronize" Icon="Sync" Click="AccountSync_Click" Background="Transparent"/>
                        <AppBarButton Label="ScreenShot" Icon="AttachCamera" Tapped="Flyout_Tapped" Background="Transparent">
                            <FlyoutBase.AttachedFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Save" Click="ScreenShot_Save"/>
                                    <MenuFlyoutItem Text="Share" Click="ScreenShot_Share"/>
                                    <MenuFlyoutItem Text="Upload" Click="ScreenShot_Upload"/>
                                </MenuFlyout>
                            </FlyoutBase.AttachedFlyout>
                        </AppBarButton>
                        <AppBarButton Label="Application" Icon="Shop" Tapped="Flyout_Tapped" Background="Transparent">
                            <FlyoutBase.AttachedFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Review" Click="Give_Rate"/>
                                    <MenuFlyoutItem Text="Feedback" Click="Give_FeedBack"/>
                                    <MenuFlyoutItem Text="How-Tos" Click="Open_Tutorials"/>
                                </MenuFlyout>
                            </FlyoutBase.AttachedFlyout>
                        </AppBarButton>
                    </CommandBar>
                </Frame>
            </NavigationView.Header>

            <NavigationView.PaneFooter>
                <ListViewItem Tapped="Flyout_Tapped">
                    <StackPanel Orientation="Horizontal">
                        <PersonPicture x:Name="accountPhoto" Height="24" Width="24"/>
                        <TextBlock x:Name="accountName" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <FlyoutBase.AttachedFlyout>
                        <Flyout>
                            <Grid Width="270">
                                <Image Source="/Assets/Logos/OneDrive_logo.png" Margin="10" VerticalAlignment="Top"/>
                                <Grid Margin="0,70,0,70">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <!--<TextBlock Grid.Row="0" x:Name="accountName" Margin="8,0,0,0" VerticalAlignment="Center"/>-->
                                    <TextBlock Grid.Row="1" x:Name="accountEmail" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    <Button Grid.Row="2" x:Name="accountLogout" Content="Log out" Click="AccountLogout_Click"
                        Height="32" Width="250" Margin="10" HorizontalAlignment="Right" Background="Red"/>
                                </Grid>
                            </Grid>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </ListViewItem>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" Navigated="NavView_Navigated">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition/>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>

        </NavigationView>

        <toolkit:InAppNotification x:Name="InAppNotification" 
                                    ShowDismissButton="True"
                                    AnimationDuration="00:00:00.1000000"
                                    VerticalOffset="100"
                                    HorizontalOffset="0"/>

    </Grid>

</Page>
