<Page
    x:Class="Research_Flow.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Research_Flow.Pages"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Pivot Margin="20,0">
            <PivotItem Header="Flow">

            </PivotItem>
            <PivotItem Header="RSS">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <AppBarButton Label="Source" Click="Open_Source" LabelPosition="Default">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE88E;" />
                        </AppBarButton>
                        <AppBarButton Label="Newest" LabelPosition="Default">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE82F;" />
                        </AppBarButton>
                    </StackPanel>
                    <SplitView x:Name="feedsource_view" Grid.Row="1" OpenPaneLength="300" IsPaneOpen="True" DisplayMode="Inline">
                        <SplitView.Pane>
                            <Grid>
                                <ListView x:Name="feedsource_list" IsItemClickEnabled="True" ItemClick="RSS_SourceClick" Margin="0,0,0,72">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24"/>
                                                    <ColumnDefinition Width="204"/>
                                                    <ColumnDefinition Width="72"/>
                                                </Grid.ColumnDefinitions>
                                                <FontIcon Grid.Column="0" FontFamily="Segoe MDL2 Assets" Glyph="&#xE753;" />
                                                <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                                <AppBarButton Grid.Column="2" Icon="More" Click="Modify_Source" Tag="{Binding ID}" Width="48" LabelPosition="Collapsed"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <Button Content="Add Source" Click="Add_Source"
                                    Height="32" Width="250" VerticalAlignment="Bottom" Margin="20" Background="LightBlue"/>
                                <Grid x:Name="source_panel" Visibility="Collapsed" Background="{ThemeResource AppBarBackgroundThemeBrush}" Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="feedName" Header="Title" IsSpellCheckEnabled="False" Margin="0,4"/>
                                    <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="feedUrl" Header="Url" IsSpellCheckEnabled="False" Margin="0,4"/>
                                    <Slider Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="feedCount" Header="Max count of items" Minimum="20" Maximum="100" TickFrequency="10" TickPlacement="Outside" Margin="0,4"/>
                                    <Slider Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="feedDays" Header="Days for update" Minimum="1" Maximum="10" TickFrequency="1" TickPlacement="Outside" Margin="0,4"/>
                                    <CheckBox Grid.Row="4" Grid.Column="0" x:Name="isJournal" Content="Is journal" Margin="0,4"/>
                                    <RatingControl Grid.Row="4" Grid.Column="1" x:Name="feedStar"/>
                                    <Button Grid.Row="6" Grid.Column="0" Click="Confirm_FeedSetting" Content="Confirm" Margin="10" HorizontalAlignment="Stretch" Background="LightSkyBlue"/>
                                    <Button Grid.Row="6" Grid.Column="1" Click="Leave_FeedSetting" Content="Cancel" Margin="10" HorizontalAlignment="Stretch" Background="LightGray"/>
                                    <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" x:Name="feedDelete" Click="Delete_FeedSetting" Content="Delete" Margin="10" HorizontalAlignment="Stretch" Background="Red" Visibility="Collapsed"/>
                                </Grid>
                            </Grid>
                        </SplitView.Pane>
                        <SplitView.Content>
                            <Grid>
                                <ListView x:Name="feeditem_list" IsItemClickEnabled="True" ItemClick="RSS_ItemClick">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel >
                                                <TextBlock Text="{Binding Title}" FontSize="20" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding Summary}" FontSize="16" MaxLines="2"/>
                                                <TextBlock Text="{Binding Published}"/>
                                                <HyperlinkButton Content="{Binding Link}" NavigateUri="{Binding Link}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <ProgressRing x:Name="waiting_feed" Height="100" Width="100"/>
                            </Grid>
                        </SplitView.Content>
                    </SplitView>
                </Grid>
            </PivotItem>
            <PivotItem Header="Crawler">
                
            </PivotItem>
        </Pivot>

        <toolkit:InAppNotification x:Name="InAppNotification" 
                                    ShowDismissButton="True"
                                    AnimationDuration="00:00:00.1000000"
                                    VerticalOffset="100"
                                    HorizontalOffset="0"/>

    </Grid>

</Page>
